#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ------------------------------------------------------------------------------------------
// |  `    |  1  |  2  |  3   |  4   |  5   | |  6   |  7    |  8    |  9   |   0   | GAME  |
// ------------------------------------------------------------------------------------------
// |  TAB  |  Q  |  W  |  E   |  R   |  T   | |  Y   |  U    |  I    |  O   |   P   |   \   |
// ------------------------------------------------------------------------------------------
// | ENTER |  A  |  S  |  D   |  F   |  G   | |  H   |  J    |  K    |  L   |   ;   |   '   |
// |       | gui | alt | shft | ctl  |      | |      |  ctl  | shft  | alt  |  gui  |       |
// ------------------------------------------------------------------------------------------
// |  NAV  |  Z  |  X  |  C   |  V   |  B   | |  N   |  M    |  ,    |  .   |   /   |  NAV  |
// ------------------------------------------------------------------------------------------
//                     | ESC  | SYM  | BSPC | | SPACE|  SYM  | ESC   |
//                     -----------------------------------------------                       
            bindings = <
&kp GRAVE &kp N1 &kp N2 &kp N3   &kp N4   &kp N5           &kp N6    &kp N7   &kp N8    &kp N9  &kp N0   &kp GRAVE
&kp TAB   &kp Q  &kp W  &kp E    &kp R    &kp T            &kp Y     &kp U    &kp I     &kp O   &kp P    &kp BSLH
&mo 1     &kp A  &kp S  &kp D    &kp F    &kp G            &kp H     &kp J    &kp K     &kp L   &kp SEMI &kp SQT
&kp LSHFT &kp Z  &kp X  &kp C    &kp V    &kp B            &kp N     &kp M    &kp COMMA &kp DOT &kp FSLH &kp RSHFT
                        &kp LALT &mo 2    &kp BSPC         &mo SPACE &kp RGUI &kp ESC
            >;
        };

        game_layer {
// ------------------------------------------------------------------------------------------
// |  ESC  |  1  |  2  |  3   |  4   |  5   | |      |       |       |      |       |       |
// ------------------------------------------------------------------------------------------
// |  TAB  |  Q  |  W  |  E   |  R   |  T   | |      |       |       |      |       |       |
// ------------------------------------------------------------------------------------------
// | GALT  |  A  |  S  |  D   |  F   |  G   | |      |       |       |      |       |       |
// ------------------------------------------------------------------------------------------
// | LSHIFT|  Z  |  X  |  C   |  V   |  B   | |      |       |       |      |       |       |
// ------------------------------------------------------------------------------------------
//                     | LCTL | ALT  |  SPC | |      |       |       |
//                     -----------------------------------------------                       
            bindings = <
&kp GRAVE &kp N1 &kp N2 &kp N3   &kp N4   &kp N5           &kp N6    &kp N7   &kp N8    &kp N9  &kp N0   &kp GRAVE
&kp TAB   &kp Q  &kp W  &kp E    &kp R    &kp T            &kp Y     &kp U    &kp I     &kp O   &kp P    &kp BSLH
&mo 1     &kp A  &kp S  &kp D    &kp F    &kp G            &kp H     &kp J    &kp K     &kp L   &kp SEMI &kp SQT
&kp LSHFT &kp Z  &kp X  &kp C    &kp V    &kp B            &kp N     &kp M    &kp COMMA &kp DOT &kp FSLH &kp RSHFT
                        &kp LALT &mo 2    &kp BSPC         &mo SPACE &kp RGUI &kp ESC
            >;
        };

        gamealt_layer {
// ------------------------------------------------------------------------------------------
// |  ESC  |  1  |  2  |  3   |  4   |  5   | |      |       |       |      |       |       |
// ------------------------------------------------------------------------------------------
// |  TAB  |  Q  |  W  |  E   |  Y   |  U   | |      |       |       |      |       |       |
// ------------------------------------------------------------------------------------------
// |       |  A  |  S  |  D   |  H   |  J   | |      |       |       |      |       |       |
// ------------------------------------------------------------------------------------------
// | LSHIFT|  Z  |  X  |  C   |  N   |  M   | |      |       |       |      |       |       |
// ------------------------------------------------------------------------------------------
//                     |  ,   |  .   |  SPC | |      |       |       |
//                     -----------------------------------------------                       
            bindings = <
&kp GRAVE &kp N1 &kp N2 &kp N3   &kp N4   &kp N5           &kp N6    &kp N7   &kp N8    &kp N9  &kp N0   &kp GRAVE
&kp TAB   &kp Q  &kp W  &kp E    &kp R    &kp T            &kp Y     &kp U    &kp I     &kp O   &kp P    &kp BSLH
&mo 1     &kp A  &kp S  &kp D    &kp F    &kp G            &kp H     &kp J    &kp K     &kp L   &kp SEMI &kp SQT
&kp LSHFT &kp Z  &kp X  &kp C    &kp V    &kp B            &kp N     &kp M    &kp COMMA &kp DOT &kp FSLH &kp RSHFT
                        &kp LALT &mo 2    &kp BSPC         &mo SPACE &kp RGUI &kp ESC
            >;
        };

        symbol_layer {
// ------------------------------------------------------------------------------------------
// |  F1   | F2  | F3  | F4   | F5   |  F6  | |  F7  |  F8   |  F9   | F10  |  F11  |  F12  |
// ------------------------------------------------------------------------------------------
// |       |  ^  |  #  |  {   |  }   |  &   | |  +   |   7   |   8   |  9   |   -   |   \   |
// ------------------------------------------------------------------------------------------
// |       |  <  |  >  |  (   |  )   |  |   | |  =   |   4   |   5   |  6   |   _   |   @   |
// ------------------------------------------------------------------------------------------
// |       |  $  |  %  |  [   |  ]   |  !   | |  *   |   1   |   2   |  3   |   /   |       |
// ------------------------------------------------------------------------------------------
//                     |      |      |      | |  0   |       |   .   |
//                     -----------------------------------------------                       
            bindings = <
&kp GRAVE &kp N1 &kp N2 &kp N3   &kp N4   &kp N5           &kp N6    &kp N7   &kp N8    &kp N9  &kp N0   &kp GRAVE
&kp TAB   &kp Q  &kp W  &kp E    &kp R    &kp T            &kp Y     &kp U    &kp I     &kp O   &kp P    &kp BSLH
&mo 1     &kp A  &kp S  &kp D    &kp F    &kp G            &kp H     &kp J    &kp K     &kp L   &kp SEMI &kp SQT
&kp LSHFT &kp Z  &kp X  &kp C    &kp V    &kp B            &kp N     &kp M    &kp COMMA &kp DOT &kp FSLH &kp RSHFT
                        &kp LALT &mo 2    &kp BSPC         &mo SPACE &kp RGUI &kp ESC
            >;
        };

        nav_layer {
// ------------------------------------------------------------------------------------------
// |  RST  |     |     |      |alt+f4|      | |      |       |       |      |       | c+a+d |
// ------------------------------------------------------------------------------------------
// |       |     |     |  V+  |      |      | | Home | PgDn  | PgUp  | End  |       |PrtSc  |
// ------------------------------------------------------------------------------------------
// |       | SS  | <<  | Play |  >>  |  ->  | |  <   |   v   |  ^    |  >   |       |       |
// ------------------------------------------------------------------------------------------
// |       |     |     |  V-  |      |      | | m<   |  mv   | m^    | m>   |       |       |
// ------------------------------------------------------------------------------------------
//                     | Mute |      | DEL  | |ENTER | lclk  | rclk  |
//                     -----------------------------------------------                       
            bindings = <
&kp GRAVE &kp N1 &kp N2 &kp N3   &kp N4   &kp N5           &kp N6    &kp N7   &kp N8    &kp N9  &kp N0   &kp GRAVE
&kp TAB   &kp Q  &kp W  &kp E    &kp R    &kp T            &kp Y     &kp U    &kp I     &kp O   &kp P    &kp BSLH
&mo 1     &kp A  &kp S  &kp D    &kp F    &kp G            &kp H     &kp J    &kp K     &kp L   &kp SEMI &kp SQT
&kp LSHFT &kp Z  &kp X  &kp C    &kp V    &kp B            &kp N     &kp M    &kp COMMA &kp DOT &kp FSLH &kp RSHFT
                        &kp LALT &mo 2    &kp BSPC         &mo SPACE &kp RGUI &kp ESC
            >;
        };

        bt_layer {
// TODO: ext_power control
// ------------------------------------------------------------------------------------------
// | BTCLR | BT1 | BT2 |  BT3 |  BT4 |  BT5 | |      |       |       |      |       |       |
// |       |     |     |      |      |      | |      |       |       |      |       |       |
// |       |     |     |      |      |      | |      |       |       |      |       |       |
// |       |     |     |      |      |      | |      |  _    |  +    |  {   |   }   |  "|"  |
//                     |      |      |      | |      |       |       |
            bindings = <
&bt BT_CLR &bt BT_SEL 0     &bt BT_SEL 1      &bt BT_SEL 2      &bt BT_SEL 3 &bt BT_SEL 4   &trans    &trans    &trans    &trans    &trans    &trans
&kp F1     &kp F2           &kp F3            &kp F4            &kp F5       &kp F6         &kp F7    &kp F8    &kp F9    &kp F10   &kp F11   &kp F12
&kp GRAVE  &kp EXCL         &kp AT            &kp HASH          &kp DOLLAR   &kp PRCNT      &kp CARET &kp AMPS  &kp ASTRK &kp LPAR  &kp RPAR  &kp TILDE
&trans     &ext_power EP_ON &ext_power EP_OFF &ext_power EP_TOG &trans       &trans         &trans    &kp MINUS &kp PLUS  &kp LBRC  &kp RBRC  &kp PIPE
                                              &trans            &trans       &trans         &trans    &trans    &trans
            >;
        };

    };
};
